<section class="section">
<div class="columns">
<div class="column is-half is-offset-one-quarter">
<div class="box">
<h2 class="title is-3">Create new event</h2>

<%= form_with model: @event do |f| %>
<div class="field">
    <div class="control">
        <%= f.label :title, class: "label" %>
        <%= f.text_field :title, class: "input" %>
    </div>
</div>

<div class="field">
    <div class="control">
        <%= f.label :body, class: "label" %>
        <%= f.text_area :body, class: "input" %>
    </div>
</div>


<div class="level">

<div class="level-item">
<div class="field">
    <div class="control">
        <%= f.label :start_date, class: "label" %>
        <%= f.datetime_local_field :start_date, class: "input" %>
    </div>
</div>
</div>

<div class="level-item">
<div class="field">
    <div class="control">
        <%= f.label :end_date, class: "label" %>
        <%= f.datetime_local_field :end_date, class: "input" %>
    </div>
</div>
</div>


</div>


<div class="field">
    <div class="control">
        <%= f.submit "Create Event", class: "button is-primary" %>
    </div>
</div>
<% end %>

</div>
</div>
</div>
</section>